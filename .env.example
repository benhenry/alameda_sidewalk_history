# Security Configuration
JWT_SECRET=your-super-secure-random-string-at-least-32-characters-long
ENCRYPTION_KEY=another-32-character-random-string-for-encryption

# Database Configuration
DATABASE_URL=./data/sidewalks.db

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./public/uploads

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=false
ALLOWED_ORIGINS=https://yourdomain.com

# Google Maps API Configuration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration (Choose ONE option)

# Option A: SendGrid (Recommended)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Option B: Gmail API
# GMAIL_CLIENT_ID=your-gmail-client-id
# GMAIL_CLIENT_SECRET=your-gmail-client-secret  
# GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
# GMAIL_FROM_EMAIL=your-email@gmail.com

# Option C: Generic SMTP
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# Captcha Configuration (if using external service)
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Monitoring and Logging
ENABLE_REQUEST_LOGGING=true
LOG_LEVEL=info

# Production Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com