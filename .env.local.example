# Environment variables for local development
# Copy this to .env.local and fill in the values

# Database Configuration
# RECOMMENDED: Use Docker Compose PostgreSQL with PostGIS for full feature support
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/sidewalks_dev"

# Alternative: SQLite for development (limited geospatial features)
# Leave DATABASE_URL empty or unset to use SQLite
# DATABASE_URL=""

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-32-characters-long"

# File Upload Configuration (Local storage for development)
# GCS_BUCKET_NAME and GCS_PROJECT_ID are not needed for local development
# GCS_BUCKET_NAME="your-bucket-name"
# GCS_PROJECT_ID="your-project-id"
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (optional - for password reset)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@yourapp.com"

# Features flags
ENABLE_REGISTRATION="true"
ENABLE_FILE_UPLOADS="true"
MAX_FILE_SIZE_MB="10"