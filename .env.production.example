# Environment variables for production deployment
# Copy this to .env.local for local development
# In production, set these as Cloud Run environment variables or secrets

# Database Configuration (Cloud SQL)
DATABASE_URL="postgresql://username:password@/database_name?host=/cloudsql/project:region:instance"
# Alternative format: postgresql://username:password@host:port/database_name

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-32-characters-long"

# Google Cloud Storage (for file uploads)
GCS_BUCKET_NAME="your-bucket-name"
GCS_PROJECT_ID="your-project-id"
# For local development, also set:
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app-name-hash-uc.a.run.app"

# Email Configuration (optional - for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourapp.com"

# Rate Limiting (optional)
REDIS_URL="redis://localhost:6379" # Use Cloud Memorystore in production

# Monitoring (optional)
SENTRY_DSN="https://your-sentry-dsn"

# Features flags
ENABLE_REGISTRATION="true"
ENABLE_FILE_UPLOADS="true"
MAX_FILE_SIZE_MB="10"